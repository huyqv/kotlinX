<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ScrollView -->
    <style name="ScrollView" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fillViewport">true</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="RecyclerView" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fillViewport">true</item>
        <item name="android:clipToPadding">false</item>
    </style>


    <style name="Fragment" />

    <style name="Fragment.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <!-- TextView -->
    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <!--<item name="android:ellipsize">end</item>-->
    </style>

    <style name="Button" parent="TextView">
        <item name="android:includeFontPadding">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">@dimen/_36sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">@dimen/_90sdp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="EditText" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_32sdp</item>
        <item name="android:paddingStart">@dimen/contentMarginD2</item>
        <item name="android:paddingEnd">@dimen/contentMarginD2</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:drawablePadding">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textCursorDrawable">@color/colorPrimary</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:privateImeOptions">nm</item>
        <item name="android:longClickable">false</item>
    </style>

</resources>