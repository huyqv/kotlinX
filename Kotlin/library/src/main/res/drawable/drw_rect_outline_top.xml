<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/colorButtonNormal"
    tools:targetApi="lollipop"> <!--drawable_ripple_effect effect color -->

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSilver" />
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- background color -->
        </shape>
    </item>

</ripple>