<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingViewContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drw_ripple_rect"
    android:clickable="true">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/settingTextViewTitle"
        style="@style/TextView"
        android:clickable="false"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Title goes here" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/settingTextViewProperty"
        style="@style/TextView"
        android:layout_marginTop="@dimen/_2sdp"
        android:clickable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        tools:text="Properties" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        style="@style/HorizontalGuideLine"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/settingCheckbox"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        android:background="@drawable/ic_checkbox"
        android:button="@null"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>