<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/InputView.Content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/inputTextViewTitle"
        style="@style/InputView.Title"
        android:layout_height="@dimen/_20sdp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title goes here" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/inputImageViewDrawable"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        app:layout_constraintBottom_toBottomOf="@+id/inputTextViewTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/inputTextViewTitle"
        tools:srcCompat="@drawable/ic_adb" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/inputTextViewError"
        style="@style/InputView.ErrorText"
        android:layout_marginTop="@dimen/_6sdp"
        android:textColor="@color/colorIndianRed"
        app:layout_constraintEnd_toEndOf="@+id/inputEditText"
        app:layout_constraintTop_toBottomOf="@+id/inputEditText"
        tools:text="Error text" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/inputEditText"
        style="@style/InputView.EditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginTop="@dimen/contentMarginD2"
        android:background="@null"
        android:textColor="@color/colorGrey"
        android:textColorHint="@color/colorLightSmoke"
        app:layout_constraintStart_toStartOf="@+id/inputTextViewTitle"
        app:layout_constraintTop_toBottomOf="@+id/inputTextViewTitle"
        tools:hint="Text placeholder..." />

</androidx.constraintlayout.widget.ConstraintLayout>