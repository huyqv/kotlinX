<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Chat.Item">

    <FrameLayout
        android:id="@+id/msgFrame"
        style="@style/WrapContent"
        android:layout_marginStart="@dimen/_50sdp"
        android:background="@drawable/drw_bubble_right1"
        android:padding="@dimen/marginY2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageRightImageViewContent"
            style="@style/Chat.Image"
            app:riv_corner_radius="@dimen/_5sdp" />

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/imageRightTextViewTime"
        style="@style/Chat.Date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msgFrame" />

</androidx.constraintlayout.widget.ConstraintLayout>