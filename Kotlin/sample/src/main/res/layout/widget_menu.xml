<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuViewContent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/menuImageViewIcon"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        tools:src="@drawable/ic_adb"
        android:layout_marginLeft="@dimen/_20sdp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/menuTextViewLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30sdp"
        android:text="Menu Item"
        app:layout_constraintBottom_toBottomOf="@+id/menuImageViewIcon"
        app:layout_constraintStart_toEndOf="@+id/menuImageViewIcon"
        app:layout_constraintTop_toTopOf="@+id/menuImageViewIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>