<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Key.Fragment" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Key.Layout" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Key" />

    <style name="Key.Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/keyRowHeight</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/_2sdp</item>
        <item name="android:paddingEnd">@dimen/_2sdp</item>
    </style>

    <style name="Key.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@drawable/selector_key_press</item>
        <item name="android:clickable">true</item>

    </style>

    <style name="Key.Char" parent="Key.Button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/color_key_press</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:button">@null</item>
    </style>

    <style name="Key.Num" parent="Key.Char">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Key.Image" parent="Key.Button">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">@drawable/color_key_press</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
    </style>

</resources>