<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Layout-->
    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LayoutContent" parent="MatchParent">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="VerticalView" parent="MatchWidth">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HorizontalItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="VerticalItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MatchConstraint">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="HorizontalGuideLine" parent="WrapContent">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="VerticalGuideLine" parent="WrapContent">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HorizontalSeparator">
        <item name="android:layout_width">0.5px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#CDCDCD</item>
    </style>

    <style name="VerticalSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#CDCDCD</item>
    </style>

    <!-- ScrollView -->
    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fillViewport">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fillViewport">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:nestedScrollingEnabled">false</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!-- TextView -->
    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/roboto_400</item>
        <item name="android:textSize">@dimen/textSize2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Button" parent="TextView">
        <item name="android:includeFontPadding">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">@dimen/_36sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">@dimen/_90sdp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="EditText" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/rowHeight</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:inputType">textEmailAddress|textNoSuggestions</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:longClickable">false</item>
        <item name="android:maxHeight">@dimen/rowHeight</item>
        <item name="android:maxLength">256</item>
        <item name="android:maxLines">1</item>
        <item name="android:minHeight">@dimen/rowHeight</item>
        <item name="android:paddingStart">@dimen/contentMarginX2</item>
        <item name="android:paddingEnd">@dimen/contentMarginX2</item>
        <item name="android:privateImeOptions">nm</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="EditText.MultiLines" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:background">@null</item>-->
        <item name="android:gravity">start</item>
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
        <item name="android:includeFontPadding">true</item>
        <!--<item name="android:inputType">textMultiLine|textNoSuggestions</item>-->
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:longClickable">false</item>
        <item name="android:maxHeight">@dimen/rowHeightX3</item>
        <item name="android:minHeight">@dimen/rowHeight</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/contentMarginX2</item>
        <item name="android:paddingEnd">@dimen/contentMarginX2</item>
        <item name="android:privateImeOptions">nm</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <!-- TextView -->
    <style name="InputView" />

    <style name="InputView.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="InputView.Title" parent="TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:text">Title</item>
    </style>

    <style name="InputView.ErrorText" parent="TextView">
        <item name="android:textColor">#D52B2B</item>
        <item name="android:text">Error text</item>
    </style>

    <style name="InputView.EditText" parent="EditText">
        <item name="android:hint">Hint text</item>
    </style>

    <!-- AppBar -->
    <style name="AppBar" />

    <style name="AppBar.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/appBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppBar.Icon">
        <item name="android:layout_width">@dimen/appBarSize</item>
        <item name="android:layout_height">@dimen/appBarSize</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:text">Title</item>
    </style>

    <style name="AppBar.Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/appBarSize</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:text">...</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Dialog -->
    <style name="Dialog" />

    <style name="Dialog.CenterLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:minHeight">260dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:elevation">1dp</item>
        <item name="android:layout_marginStart">@dimen/contentMarginX4</item>
        <item name="android:layout_marginEnd">@dimen/contentMarginX4</item>
        <item name="android:layout_marginTop">@dimen/contentMarginX4</item>
        <item name="android:layout_marginBottom">@dimen/contentMarginX4</item>
        <item name="radius">@dimen/dialogRadius</item>
    </style>

    <style name="Dialog.BottomLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">260dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:elevation">2dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:layout_marginStart">@dimen/_1sdp</item>
        <item name="android:layout_marginEnd">@dimen/_1sdp</item>
        <item name="radiusTopRight">@dimen/dialogRadius</item>
        <item name="radiusTopLeft">@dimen/dialogRadius</item>
        <item name="strokeLineWidth">1px</item>
        <item name="strokeLineColor">#E1E1E1</item>
    </style>

</resources>