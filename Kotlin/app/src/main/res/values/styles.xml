<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Dialog -->
    <style name="Dialog" />

    <style name="Dialog.Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">1dp</item>
        <item name="cardCornerRadius">@dimen/itemRadius</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/contentMarginX2</item>
    </style>

    <style name="Dialog.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:padding">1px</item>
    </style>

    <style name="Dialog.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_80sdp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/_4sdp</item>
        <item name="android:paddingRight">@dimen/_4sdp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">#B5A6A6A6</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/contentMarginX2</item>
    </style>

    <style name="Dialog.Footer">
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Dialog.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/drw_ripple_light</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/contentMarginX2</item>
        <item name="android:paddingBottom">@dimen/contentMarginX2</item>
        <item name="android:layout_marginTop">@dimen/contentMarginX2</item>
    </style>

    <!-- Layout -->
    <style name="Fragment" />

    <style name="Fragment.BlankText" parent="TextView">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/textSize4</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Fragment.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>


</resources>
