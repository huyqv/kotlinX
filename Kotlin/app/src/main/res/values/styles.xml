<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Fragment" />

    <style name="Fragment.Layout" parent="MatchParent">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <!-- TextView -->
    <style name="TextView" parent="WrapContent">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextView.Tiny" parent="TextView">
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="TextView.Small" parent="TextView">
        <item name="android:textSize">@dimen/textSize2</item>
    </style>

    <style name="TextView.Medium" parent="TextView">
        <item name="android:textSize">@dimen/textSize3</item>
        <item name="android:text">Medium Text</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextView.Large" parent="TextView">
        <item name="android:textSize">@dimen/textSize4</item>
    </style>

    <style name="TextView.Extra" parent="TextView">
        <item name="android:textSize">@dimen/textSize5</item>
    </style>

    <!-- Button -->
    <style name="Button" parent="TextView">
        <item name="android:includeFontPadding">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">@dimen/_32sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">@dimen/_90sdp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:elevation">1dp</item>
    </style>

    <!-- EditText -->
    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_32sdp</item>
        <item name="android:paddingStart">@dimen/margin</item>
        <item name="android:paddingEnd">@dimen/margin</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:drawablePadding">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textCursorDrawable">@color/colorPrimary</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:privateImeOptions">nm</item>
        <item name="android:longClickable">false</item>
    </style>

    <!-- Dialog -->
    <style name="Dialog" />

    <style name="Dialog.Card" parent="MatchWidth">
        <item name="cardElevation">1dp</item>
        <item name="cardCornerRadius">@dimen/radius2</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/margin4</item>
    </style>

    <style name="Dialog.Layout" parent="MatchWidth">
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:padding">1px</item>
    </style>

    <style name="Dialog.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_80sdp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/_4sdp</item>
        <item name="android:paddingRight">@dimen/_4sdp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/colorSemiTransparent</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/margin5</item>
    </style>

    <style name="Dialog.Footer">
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Dialog.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/drw_ripple_light</item>
        <item name="android:textSize">@dimen/textSize2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/margin2</item>
        <item name="android:paddingBottom">@dimen/margin3</item>
        <item name="android:layout_marginTop">@dimen/margin4</item>
    </style>

</resources>
