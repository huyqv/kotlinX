<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="-55"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorBubbleLeft" />
            </shape>
        </rotate>
    </item>
    <item android:left="@dimen/_10sdp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorBubbleLeft" />
            <corners android:radius="@dimen/bubbleRadius" />
        </shape>
    </item>
</layer-list>