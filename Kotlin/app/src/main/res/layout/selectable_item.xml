<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/selectableView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/rowHeight"
    android:clickable="true"
    android:paddingStart="@dimen/contentMarginX4"
    android:paddingEnd="@dimen/contentMarginX4"
    tools:background="@color/colorWhite">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewItem"
        style="@style/TextView"
        android:layout_width="0dp"
        android:clickable="false"
        android:gravity="center_vertical"
        android:maxLines="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageViewSelected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Item text goes here" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewSelected"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="0dp"
        android:clickable="false"
        android:src="@drawable/ic_checked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>