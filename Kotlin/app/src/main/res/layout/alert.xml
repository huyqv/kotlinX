<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Dialog.Card">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/Dialog.Layout"
        android:paddingBottom="@dimen/margin2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewTitle"
            style="@style/Dialog.Title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewIcon"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/margin4"
            android:padding="@dimen/_2sdp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle"
            app:srcCompat="@drawable/ic_kotlin"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewMessage"
            style="@style/TextView.Small"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/margin3"
            android:layout_marginTop="@dimen/margin2"
            android:layout_marginEnd="@dimen/margin3"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewIcon"
            tools:text="Hello, you can hide this message by just touch outside the dialog box" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/viewNeutral"
            style="@style/Dialog.Button"
            app:layout_constraintEnd_toStartOf="@+id/viewPositive"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewMessage"
            tools:ignore="MissingConstraints"
            tools:text="Neutral" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/viewPositive"
            style="@style/Dialog.Button"
            app:layout_constraintEnd_toStartOf="@+id/viewNegative"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/viewNeutral"
            app:layout_constraintTop_toBottomOf="@id/textViewMessage"
            tools:ignore="MissingConstraints"
            tools:text="Positive" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/viewNegative"
            style="@style/Dialog.Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/viewPositive"
            app:layout_constraintTop_toBottomOf="@id/textViewMessage"
            tools:ignore="MissingConstraints"
            tools:text="Negative" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>