<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ContentLayout"
    android:orientation="vertical">

    <com.huy.kotlin.widget.AppBarView
        android:id="@+id/appBarView"
        style="@style/AppBar.Light"
        android:text="Settings" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/settingScrollView"
        style="@style/MatchParent">

        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/MatchWidth"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text"
                style="@style/Setting.Title"
                android:text="Account" />

            <com.huy.kotlin.widget.SettingView
                android:id="@+id/settingItem1"
                style="@style/Setting.Item"
                android:checkable="true"
                android:checked="true"
                android:title="Synchronize"
                android:text="Enabled" />

            <com.huy.kotlin.widget.SettingView
                style="@style/Setting.Item"
                android:title="Email"
                android:text="****@gmail.com" />

            <com.huy.kotlin.widget.SettingView
                style="@style/Setting.Item"
                android:title="Password"
                android:text="******" />

            <com.huy.kotlin.widget.SettingView
                android:id="@+id/settingItem4"
                style="@style/Setting.Item"
                android:title="Payment"
                android:text="Enabled" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text1"
                style="@style/Setting.Title"
                android:text="Appearance" />

            <com.huy.kotlin.widget.SettingView
                android:id="@+id/settingItem5"
                style="@style/Setting.Item"
                android:title="Theme"
                android:text="Light" />

            <com.huy.kotlin.widget.SettingView
                android:id="@+id/settingItem7"
                style="@style/Setting.Item"
                android:checkable="true"
                android:checked="true"
                android:title="Notification"
                android:text="Enabled" />

            <com.huy.kotlin.widget.SettingView
                style="@style/Setting.Item"
                android:checkable="true"
                android:checked="false"
                android:title="Location"
                android:text="Disabled" />

            <com.huy.kotlin.widget.SettingView
                style="@style/Setting.Item"
                android:title="Language"
                android:text="Default" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text2"
                style="@style/Setting.Title"
                android:text="Application" />

            <com.huy.kotlin.widget.SettingView
                android:id="@+id/settingItem9"
                style="@style/Setting.Item"
                android:title="Develop"
                android:text="@string/develop_name" />

            <com.huy.kotlin.widget.SettingView
                android:id="@+id/settingTextViewAppVersion"
                style="@style/Setting.Item"
                android:title="Version" />

            <com.huy.kotlin.widget.SettingView
                android:id="@+id/settingItem11"
                style="@style/Setting.Item"
                android:title="Check for update"
                android:text="Last update 2018/09/28"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text3"
                style="@style/Setting.Title"
                android:text="System" />

            <com.huy.kotlin.widget.SettingView
                android:id="@+id/settingTextViewOsName"
                style="@style/Setting.Item"
                android:title="OS" />

            <com.huy.kotlin.widget.SettingView
                android:id="@+id/settingTextViewSdkVersion"
                style="@style/Setting.Item"
                android:title="SDK" />

            <com.huy.kotlin.widget.SettingView
                android:id="@+id/settingTextViewDeviceName"
                style="@style/Setting.Item"
                android:title="Name" />

            <com.huy.kotlin.widget.SettingView
                android:id="@+id/settingTextViewDeviceId"
                style="@style/Setting.Item"
                android:title="ID/IMEI/ESN"/>

            <include layout="@layout/view_developer" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>




