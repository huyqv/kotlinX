<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appBar_view_search"
    style="@style/AppBar.Content">

    <EditText
        android:id="@+id/appBarEditTextSearch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/microDist"
        android:background="@color/colorSemiTransparent"
        android:clickable="true"
        android:hint="@string/search"
        android:imeOptions="actionSearch"
        android:maxLength="100"
        android:maxLines="1"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_40sdp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorLight"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/searchBarImageViewSearch"
        style="@style/AppBar.Icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_search" />

</androidx.constraintlayout.widget.ConstraintLayout>
