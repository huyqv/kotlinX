<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Chat.Item">

    <View
        android:id="@+id/view1"
        style="@style/Chat.ArrowRight"
        app:layout_constraintBottom_toBottomOf="@+id/textRightTextViewContent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textRightTextViewContent"
        style="@style/Chat.Text"
        android:background="@drawable/drw_bubble_right"
        android:breakStrategy="simple"
        android:text="Lorem ipsum dolor sit amet, choncus id velit vitae mollis"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@+id/view1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textRightTextViewTime"
        style="@style/Chat.Date"
        app:layout_constraintEnd_toStartOf="@+id/view1"
        app:layout_constraintTop_toBottomOf="@+id/textRightTextViewContent" />

</androidx.constraintlayout.widget.ConstraintLayout>