<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWidth">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/inputTextViewTitle"
        style="@style/TextView.Small"
        android:layout_height="@dimen/_20sdp"
        android:gravity="center_vertical"
        android:letterSpacing="0.1"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/inputImageViewDrawable"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        app:layout_constraintBottom_toBottomOf="@+id/inputTextViewTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/inputTextViewTitle"
        app:srcCompat="@drawable/ic_adb" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/inputTextViewError"
        style="@style/TextView.Tiny"
        android:layout_marginTop="@dimen/_6sdp"
        android:textColor="@color/colorIndianRed"
        app:layout_constraintEnd_toEndOf="@+id/inputEditText"
        app:layout_constraintTop_toBottomOf="@+id/inputEditText" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/inputEditText"
        style="@style/TextView.Small"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/microDist"
        android:height="@dimen/mediumText"
        android:background="@null"
        android:textColor="@color/colorGrey"
        android:textColorHint="@color/colorLightSmoke"
        app:layout_constraintStart_toStartOf="@+id/inputTextViewTitle"
        app:layout_constraintTop_toBottomOf="@+id/inputTextViewTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>