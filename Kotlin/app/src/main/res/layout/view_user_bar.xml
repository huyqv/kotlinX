<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appBarViewContent"
    style="@style/AppBar.Content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageViewAvatar"
        android:layout_width="46dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/tinyDist"
        android:src="@mipmap/img_user"
        app:riv_border_color="@color/colorPrimaryOpacity1"
        app:riv_border_width="@dimen/_2sdp"
        app:riv_oval="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appBarTextViewTitle"
        style="@style/AppBar.Title" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appBarImageViewDrawableEnd"
        style="@style/AppBar.Icon" />

</androidx.appcompat.widget.LinearLayoutCompat>