<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Chat.Item"
    android:layout_marginStart="@dimen/_10sdp"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/stickerLeftImageViewAvatar"
        style="@style/Chat.Avatar"
        app:layout_constraintBottom_toBottomOf="@+id/stickerLeftImageViewSticker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/stickerLeftImageViewSticker"
        app:riv_border_color="@color/colorBubbleBorder"
        app:riv_border_width="@dimen/bubbleAvatarBorder"
        app:riv_corner_radius="@dimen/bubbleAvatarRadius" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/stickerLeftImageViewSticker"
        style="@style/Chat.Ticker"
        android:layout_marginStart="@dimen/margin"
        app:layout_constraintStart_toEndOf="@+id/stickerLeftImageViewAvatar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/stickerLeftTextViewTime"
        style="@style/Chat.Date"
        app:layout_constraintStart_toStartOf="@+id/stickerLeftImageViewSticker"
        app:layout_constraintTop_toBottomOf="@+id/stickerLeftImageViewSticker" />

</androidx.constraintlayout.widget.ConstraintLayout>