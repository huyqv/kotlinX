<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ContentLayout"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        style="@style/PatternImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.huy.kotlin.widget.AppBarView
        android:id="@+id/appBarView"
        style="@style/AppBar.Light"
        android:text="Handle Thread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewPlay"
        style="@style/TextView.Medium"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Play"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/appBarView"
        app:layout_constraintEnd_toEndOf="@+id/appBarView"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        style="@style/RecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarView"
        tools:itemCount="10"
        tools:listitem="@layout/item_user" />

</androidx.constraintlayout.widget.ConstraintLayout>




