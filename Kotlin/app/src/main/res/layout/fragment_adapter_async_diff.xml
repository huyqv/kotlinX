<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ContentLayout">

    <androidx.appcompat.widget.AppCompatImageView style="@style/PatternImage" />

    <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/MatchParent"
        android:orientation="vertical">

        <com.example.kotlin.widget.AppBarView
            android:id="@+id/appBarView"
            style="@style/AppBar.Light"
            android:text="Images" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            style="@style/VerticalItem">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                style="@style/RecyclerView"
                android:layout_height="match_parent"
                tools:itemCount="30"
                tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/item_image"
                tools:spanCount="3" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <FrameLayout
        android:id="@+id/container"
        style="@style/MatchParent" />

</FrameLayout>