<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    android:layout_weight="1"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin2">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/userImageViewAvatar"
        style="@style/AvatarUserItem"
        android:layout_marginTop="@dimen/margin2"
        app:riv_border_color="@color/colorPrimaryOpacity3"
        app:riv_border_width="@dimen/_4sdp"
        app:riv_oval="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/userTextViewName"
        style="@style/TextView.Small"
        android:layout_margin="@dimen/margin"
        android:gravity="center"
        android:textStyle="bold"
        tools:text="@tools:sample/last_names" />

</androidx.appcompat.widget.LinearLayoutCompat>