<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Chat.Item">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/linkLeftImageViewAvatar"
        style="@style/Chat.Avatar"
        app:layout_constraintBottom_toBottomOf="@+id/msgFrame"
        app:layout_constraintStart_toStartOf="parent"
        app:riv_border_color="@color/colorBubbleBorder"
        app:riv_border_width="@dimen/bubbleAvatarBorder"
        app:riv_corner_radius="@dimen/bubbleAvatarRadius" />

    <View
        android:id="@+id/view1"
        style="@style/Chat.ArrowLeft"
        app:layout_constraintBottom_toBottomOf="@+id/msgFrame"
        app:layout_constraintStart_toEndOf="@+id/linkLeftImageViewAvatar" />

    <FrameLayout
        android:id="@+id/msgFrame"
        style="@style/WrapContent"
        android:background="@drawable/drw_bubble_left"
        android:padding="@dimen/marginY2"
        app:layout_constraintStart_toEndOf="@+id/view1"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.library.widget.ThumbnailWebView
            android:id="@+id/linkLeftWebView"
            style="@style/Chat.Image" />

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/linkLeftTextViewTime"
        style="@style/Chat.Date"
        app:layout_constraintStart_toStartOf="@+id/msgFrame"
        app:layout_constraintTop_toBottomOf="@+id/msgFrame" />

</androidx.constraintlayout.widget.ConstraintLayout>